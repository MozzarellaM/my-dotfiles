# Homebrew Aliases
alias brewp='brew pin'
alias brews='brew list -1'
alias brewsp='brew list --pinned'
alias bubo='brew update; and brew outdated'
alias bubc='brew upgrade; and brew cleanup'
alias bubu='bubo; and bubc'
alias bcubo='brew update; and brew cask outdated'
alias bcubc='brew cask reinstall (brew cask outdated); and brew cleanup'
alias bs='brew search'
alias bsd='brew search --desc'
alias bi='brew info'
alias brewup='brew upgrade; and brew cleanup'
alias bis='brew install'
alias cask='brew cask'
alias ci='brew cask info'
alias casks='brew search --casks'
alias cs='brew search --casks'
alias csd='brew search --casks --desc'
alias cis='brew cask install'
